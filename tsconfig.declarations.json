{
    "compilerOptions": {
      "target": "es2016",
      "module": "ESNext",
      "jsx": "react",
      "strict": true,
      "moduleResolution": "node",
      "declaration": true,
      "emitDeclarationOnly": true,
      "sourceMap": true,
      "outDir": "dist/types",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  